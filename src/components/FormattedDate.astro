---
interface Props {
  date: Date;
}

const { date } = Astro.props;
console.log("Date received in FormattedDate:", date);
---

{date ? (
  <time datetime={date.toISOString()}>
    {
      date.toLocaleDateString('en-us', {
        year: 'numeric',
        month: 'short',
        day: 'numeric',
      })
    }
  </time>
) : <span>No date available</span>}