<!-- components/Header.astro -->
---
import HeaderLink from './HeaderLink.astro';
import Logo from './Logo.astro';
---

<header>
  <div class="container">
    <Logo />
    
    <input type="checkbox" id="nav-toggle" class="nav-toggle">
    <label for="nav-toggle" class="nav-toggle-label">
      <span></span>
    </label>
    
    <nav>
      <ul>
        <li><HeaderLink href="/about">ABOUT</HeaderLink></li>
        <li><HeaderLink href="/food">FOOD</HeaderLink></li>
        <li><HeaderLink href="/wellness">WELLNESS</HeaderLink></li>
        <li><HeaderLink href="/fitness">FITNESS</HeaderLink></li>
      </ul>
    </nav>
  </div>
</header>

<style>
  header {
    background-color: #faf5f0;
    padding: 1rem 0;
    border-bottom: 1px solid rgba(0,0,0,0.05);
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  nav {
    width: 100%;
  }
  
  ul {
    display: flex;
    justify-content: center;
    gap: 3rem;
    list-style: none;
    margin: 1rem 0 0;
    padding: 0;
  }
  
  .nav-toggle {
    display: none;
  }
  
  .nav-toggle-label {
    display: none;
  }
  
  @media (max-width: 768px) {
    .nav-toggle-label {
      display: flex;
      position: absolute;
      top: 1.5rem;
      right: 2rem;
      height: 30px;
      width: 30px;
      cursor: pointer;
      align-items: center;
      justify-content: center;
    }
    
    .nav-toggle-label span,
    .nav-toggle-label span::before,
    .nav-toggle-label span::after {
      display: block;
      background: #8d6e7c;
      height: 2px;
      width: 26px;
      position: relative;
      transition: transform 0.3s ease;
    }
    
    .nav-toggle-label span::before,
    .nav-toggle-label span::after {
      content: '';
      position: absolute;
    }
    
    .nav-toggle-label span::before {
      top: -8px;
    }
    
    .nav-toggle-label span::after {
      bottom: -8px;
    }
    
    nav {
      position: absolute;
      top: 100%;
      left: 0;
      background: #faf5f0;
      width: 100%;
      transform: scale(1, 0);
      transform-origin: top;
      transition: transform 0.3s ease;
      z-index: 10;
      box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }
    
    ul {
      flex-direction: column;
      align-items: center;
      gap: 1.5rem;
      padding: 1.5rem 0;
    }
    
    .nav-toggle:checked ~ nav {
      transform: scale(1, 1);
    }
    
    .nav-toggle:checked ~ .nav-toggle-label span {
      transform: rotate(45deg);
    }
    
    .nav-toggle:checked ~ .nav-toggle-label span::before {
      transform: rotate(90deg);
      top: 0;
    }
    
    .nav-toggle:checked ~ .nav-toggle-label span::after {
      transform: rotate(90deg);
      bottom: 0;
    }
  }
</style>